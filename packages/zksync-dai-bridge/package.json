{
  "name": "bridge-playground",
  "private": "true",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:unit && yarn build:l1 && yarn build:l2",
    "build:l1": "DOMAIN=l1 hardhat compile --no-typechain --network goerli",
    "build:l2": "DOMAIN=l2 hardhat compile --no-typechain --network zksync",
    "build:unit": "UNIT_TESTS=1 hardhat compile --network hardhat",
    "clean": "hardhat clean && rm -rf artifacts artifacts-zk cache cache-zk crytic-export corpus verify.json",
    "coverage": "UNIT_TESTS=1 hardhat coverage --network hardhat && istanbul check-coverage --branches 100 --lines 100",
    "format": "prettier --check \"./**/*.{ts,sol}\"",
    "format:fix": "prettier --write \"./**/*.{ts,sol}\"",
    "lint": "eslint --ext .ts test test-e2e zksync-helpers hardhat.config.ts",
    "lint:fix": "yarn lint --fix",
    "local-setup": "./scripts/start-local-setup.sh",
    "test": "UNIT_TESTS=1 hardhat test --no-compile --network hardhat",
    "test:fix": "yarn lint:fix && yarn format:fix && yarn test && yarn typecheck",
    "test-e2e": "yarn test-e2e:local",
    "test-e2e:local": "./scripts/wait-for-local-setup.sh && TEST_ENV=local mocha --config .mocharc-e2e.js",
    "test-e2e:goerli": "TEST_ENV=goerli mocha --config .mocharc-e2e.js",
    "typecheck": "tsc --noEmit",
    "verify": "yarn hardhat run scripts/verify.ts --network goerli"
  },
  "dependencies": {
    "@matterlabs/signature-checker": "^1.1.1",
    "@matterlabs/zksync-contracts": "^0.5.1"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.4",
    "@eth-optimism/smock": "=1.1.10",
    "@makerdao/hardhat-utils": "^0.1.3",
    "@matterlabs/hardhat-zksync-deploy": "^0.6.1",
    "@matterlabs/hardhat-zksync-solc": "^0.3.14-beta.1",
    "@matterlabs/hardhat-zksync-verify": "^0.1.1",
    "@nomiclabs/ethereumjs-vm": "^4.2.2",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts": "4.7.3",
    "@openzeppelin/contracts-upgradeable": "4.7.3",
    "@typechain/ethers-v5": "10.1.0",
    "@typechain/hardhat": "6.1.2",
    "@types/chai": "^4.2.12",
    "@types/chai-as-promised": "^7.1.5",
    "@types/lodash": "^4.14.170",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.0",
    "@types/utf8": "^2.1.6",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.0.1",
    "earljs": "^0.1.10",
    "eslint": "^8.11.0",
    "eslint-config-typestrict": "^1.0.5",
    "eslint-plugin-no-only-tests": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.15.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eth-permit": "^0.1.9",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.7.0",
    "hardhat": "^2.12.5",
    "hardhat-gas-reporter": "^1.0.4",
    "istanbul": "^0.4.5",
    "lodash": "^4.17.21",
    "mocha": "^8.1.1",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solidity-coverage": "^0.7.17",
    "ts-essentials": "^7.0.1",
    "ts-node": "^10.9.1",
    "typechain": "8.1.0",
    "typescript": "^4.7.4",
    "utf8": "^3.0.0",
    "web3": "^1.3.4",
    "zksync-web3": "^0.12.5"
  }
}
