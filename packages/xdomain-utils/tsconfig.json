{
  "compilerOptions": {
    "target": "ES2018",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "composite": false,
    "declaration": false,
    "incremental": true,
    "moduleResolution": "node",
    "types": ["mocha"]
  },
  "include": ["test/**/*", "src/**/*"]
}
