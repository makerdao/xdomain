{
  "name": "teleport-monitoring",
  "version": "1.0.0",
  "description": "Monitoring scripts for Maker Teleport",
  "files": [
    "/dist"
  ],
  "license": "AGPL-3.0",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "yarn eth-sdk",
    "migrate": "prisma migrate deploy && prisma generate",
    "start": "yarn migrate && node -r esbuild-register ./src/bin/monitor",
    "format": "prettier --check \"./**/*.ts\"",
    "format:fix": "prettier --write \"./**/*.ts\"",
    "lint": "eslint --ext .ts src test-e2e",
    "lint:fix": "yarn lint --fix",
    "typecheck": "tsc --noEmit",
    "build": "rm -rf ./dist && tsc -p ./tsconfig.build.json",
    "test": "mocha 'src/**/*.test.ts'"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@sinonjs/fake-timers": "^9.1.2",
    "@types/node": "^17.0.32",
    "@types/sinonjs__fake-timers": "^8.1.2",
    "axios": "^0.26.0",
    "ethers": "^5.5.4",
    "fastify": "^3.29.0",
    "ts-essentials": "^9.1.2"
  },
  "devDependencies": {
    "@dethcrypto/eth-sdk": "^0.3.2",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@types/glob": "^7.2.0",
    "@types/lodash": "^4.14.181",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "dotenv": "^16.0.1",
    "earljs": "^0.2.3",
    "esbuild": "^0.14.39",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.11.0",
    "eslint-config-typestrict": "^1.0.2",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.12.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "hardhat": "^2.9.5",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "prettier": "^2.5.1",
    "prisma": "^3.14.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.5",
    "wait-for-expect": "^3.0.2"
  }
}
